{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@modules/*": ["modules/*"],
      "@assets/*": ["assets/*"],
      "@perks/*": ["components/Pages/Main/Perks Section/*"],
      "@profile/*": ["components/Pages/Main/Profile Section/*"],
      "@projects/*": ["components/Pages/Main/Projects Section/*"],
      "@sections/*": ["components/Sections/*"],
      "@perksModules/*": ["modules/Perks Section/*"],
      "@profileModules/*": ["modules/Profile Section/*"],
      "@projectsModules/*": ["modules/Projects Section/*"]
    },
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "outDir": "./dist-ts",
    "declaration": false,
    "noEmit": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}
